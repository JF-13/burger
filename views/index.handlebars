<div class="container">
  <h1 class="header">Burger Joint</h1>


  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3 columns">
      <h2>Ready Burgers!</h2>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button class="btn btn-danger" type="submit">eat!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
      </ul>
    </div>
    <div class="col-md-3 columns">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-3"></div>
  </div>
  <ul>





    <div class="columns">
      <h2>Make your own burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button class="btn btn-success" type="submit">Submit</button>
      </form>
    </div>
</container>
